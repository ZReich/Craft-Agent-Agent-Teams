{
  "compilerOptions": {
    "types": ["node", "bun"],
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@craft-agent/core": ["packages/core/src/index.ts"],
      "@craft-agent/core/*": ["packages/core/src/*"],
      "@craft-agent/shared": ["packages/shared/src/index.ts"],
      "@craft-agent/shared/*": ["packages/shared/src/*"],
      "@craft-agent/codex-types": ["packages/codex-types/src/index.ts"],
      "@craft-agent/codex-types/*": ["packages/codex-types/src/*"],
      "@craft-agent/session-tools-core": ["packages/session-tools-core/src/index.ts"],
      "@craft-agent/session-tools-core/*": ["packages/session-tools-core/src/*"]
    }
  },
  "include": ["src/**/*", "packages/core/src/**/*", "packages/shared/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "apps",
    "packages/*/tests/**/*",
    "packages/shared/src/**/__tests__/**",
    "packages/shared/src/**/*.test.ts"
  ]
}
